<body class="form-v2">
    <div class="page-content">
        <div class="form-v2-content">
            <div class="form-left">

                <img class="image" src="~/ServicesLinks/ServiceCreate/images/1.jpeg" />
                <div class="text-1">
                    <p>Creating Service</p>
                </div>

            </div>
            @*@using (Html.BeginForm("Create", "Services", FormMethod.Post, new { @class = "form-detail", id = "myform" }))
                {
                    Html.AntiForgeryToken()*@
            <form class="form-detail" action="/Services/Create" method="post" id="myform">
                @Html.AntiForgeryToken()
                <h2>Add New Service</h2>
                <div class="form-row">

                    <div class="form-group">
                        @Html.LabelFor(model => model.ServiceName, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ServiceName, new { htmlAttributes = new { @class = "form-control input-text ", placeholder = "Service Name" } })
                            @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <div class="form-row">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control input-text", placeholder = "Description" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>
                <div class="form-row">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Payment, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Payment, new { htmlAttributes = new { @class = "form-control input-text", placeholder = "Payment" } })
                            @Html.ValidationMessageFor(model => model.Payment, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>
                <div class="form-row">



                </div>




                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="register btn btn-dark" />
                    </div>
                </div>


                @*<div>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "register btn btn-dark" })
                </div>*@


            </form>
        </div>
    </div>
</body>


































